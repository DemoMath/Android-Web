<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/web_header_height"
    android:id="@+id/web_header_fl_all"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/web_header_iv_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:src="@mipmap/web_ic_back"
        android:layout_gravity="center_vertical|left"/>
    <TextView
        android:id="@+id/web_header_tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:text="关闭"
        android:textColor="#fff"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/web_header_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="标题"
        android:textColor="#fff"
        android:textSize="18sp"/>
    <ImageView
        android:id="@+id/web_header_iv_share"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:src="@mipmap/web_ic_share"
        android:layout_gravity="center_vertical|right"/>
</FrameLayout>